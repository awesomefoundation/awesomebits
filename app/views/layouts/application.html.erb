<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
<head>
  <meta charset="utf-8" />
  <%= content_tag :title, page_title(app_name: 'The Awesome Foundation', reverse: true, separator: " - ") %>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= csrf_meta_tags %>
  <%= meta_tag :viewport, "width=device-width, initial-scale=1", :name => 'viewport' %>
  <%= meta_tag :description, t("meta.description"), name: "description" %>
  <%= meta_tag :description, t("meta.description"), property: "og:description" %>
  <%= meta_tag :image, image_url("logo-1500x750.png"), property: "og:image" %>
  <%= tag :meta, property: "og:title" , content: content_for?(:page_title) ? content_for(:page_title) : t(".main-header")%>
  <%= tag :meta, property: "og:url", content: url_for(only_path: false) %>
  <%= meta_tag :type, "website", property: "og:type" %>

  <%= render "layouts/locales" %>

  <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" %>

  <script type="text/javascript" src="https://use.typekit.com/xhz4kzm.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <!--[if lt IE 9]>
  <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <%= content_for :head %>
  <%= javascript_importmap_tags %>
</head>
<body class="<%= body_class %>">
  <div id="site-container" class="flexbox vertical stretch">
    <%= render 'shared/navigation' %>
    <div class="flexbox vertical center">
      <div id="main-container" class="flexbox vertical stretch">
        <section class="container-wrapper flexbox vertical center">
          <section class="container">
            <%= render 'shared/flashes' %>
            <%= yield %>
          </section>
        </section>
      </div>
    <%= render 'shared/footer' %>
    </div>
    <%= render 'shared/javascript' %>
  </div>  
</body>
</html>
