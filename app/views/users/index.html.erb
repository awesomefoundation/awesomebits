<header class="users">
  <h1><%= t(".title") %></h1>
</header>

<section class="awesome-members">
  <section class="members-list">
    <table class="members">
      <tr>
        <th><%= t(".name") %></th>
        <th><%= t(".email") %></th>
        <% if current_user.can_edit_all_profiles? %>
          <th><%= t(".edit") %></th>
        <% end %>
        <th><%= t(".chapter") %></th>
        <th><%= t(".role") %></th>
        <% if current_user.can_manage_users?(current_chapter) %>
          <th><%= t(".dean") %></th>
        <% end %>
        <% if current_user.can_manage_permissions? %>
          <th><%= t(".admin") %></th>
        <% end %>
        <% if current_user.can_manage_users?(current_chapter) %>
          <th><%= t(".remove") %></th>
        <% end %>
      </tr>
      <%= render @users %>
    </table>
  </section>
</section>

<%= will_paginate(@users) %>
