<%= simple_form_for user do |form| %>
  <%= form.input :first_name %>
  <%= form.input :last_name %>
  <%= form.input :email %>
  <%= form.input :url, :label => 'Website URL' %>
  <%= form.input :bio, 
    :as => :text %>
  <%= form.input :new_password, 
    :as         => :password, 
    :label      => "New password" %>
  <%= form.button :submit %>
<% end %>
