<%= simple_form_for user do |form| %>
  <%= form.input :first_name %>
  <%= form.input :last_name %>
  <%= form.input :email %>
  <%= form.input :bio, 
    :as => :text %>
  <%= form.input :url %>
  <%= form.input :twitter_username %>
  <%= form.input :facebook_url %>
  <%= form.input :linkedin_url %>
  <%= form.input :new_password, 
    :as         => :password, 
    :label      => "New password" %>
  <%= form.button :submit %>
<% end %>
