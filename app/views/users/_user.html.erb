<tr data-user-id="<%= user.id %>" class="<%= user.admin ? 'admin' : 'non_admin' %>">
  <td class="name">
    <h2><%= user.first_name %> <%= user.last_name %></h2>
    <span> - <%= t(".admin") %></span>
  </td>
  <td><%= user.email %></td>
  <td class="chapter-name"><%= user.chapter_name || "-" %></td>
  <td class="role-name"><%= user.role_name || "-" %></td>
  <% if current_user.can_manage_permissions? %>
   <td class="promote-demote-dean <%= user.role_name %>">
      <span data-role-id="<%= user.role_id %>">
      <% if user.role_name %>
        <%= link_to t('.promote_to_dean'), role_promotions_path(user.role_id), :method => :post, 
          :remote => true, :class => "promote-user" %>
        <%= link_to t(".demote_to_trustee"), role_promotions_path(user.role_id), :method => :delete, 
          :remote => true, :class => "demote-user" %>
      <% else %>
        -
      <% end %>
      </span>
    </td>
    <td class="promote-demote-admin">
      <span>
      <% if current_user.id != user.id %> 
        <%= link_to t(".promote_admin"), user_admins_path(user.id), :method => :post,
          :remote => true, :class => "promote-user" %>
        <%= link_to t(".demote_admin"), user_admins_path(user.id), :method => :delete,
          :remote => true, :class => "demote-user" %>
      <% else %>
        -
      <% end %>
      </span>
    </td>
    <td class="remove-trustee">
    <% if user.role_name %>
      <%= link_to t('.remove_from_chapter'), role_path(user.role_id), :method => :delete,
        :remote => true, :class => "remove-user", :confirm => "Are you sure you want to remove?" %>
    <% else %>
      -
    <% end %>
    </td>
    <% end %>
</tr>
