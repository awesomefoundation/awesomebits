<% content_for :javascript do %>
  <% javascript_tag do %>
    $(document).ready(function() {
      $('.gallery').each(function() {
        $(this).magnificPopup({
          delegate: 'a',
          type: 'image',
          gallery: {
            enabled: true
          },
          image: {
            titleSrc: 'title'
          }
        });
      });
    });
  <% end %>
<% end %>
