<div class="avatar">
  <%= image_tag(current_user.gravatar_url) %>
</div>

<h2><%= current_user.first_name %> <%= current_user.last_name %></h2>

<div class="editing">
  <%= link_to "Edit My Profile", edit_user_path(current_user) %>
</div>

<% if current_user.can_manage_chapter?(@chapter) %>
  <div class="editing">
    <%= link_to "Edit Chapter Profile", edit_chapter_path(@chapter) %>
  </div>
<% end %>

<div class="editing">
  <%= link_to "Projects", chapter_projects_path(@chapter) %>
</div>

<% current_user.chapters.each do |chapter| %>
  <div class="editing">
    <%= link_to "Finalists", chapter_finalists_path(chapter) %>
  </div>
<% end %>

<% if current_user.can_create_chapters? %>
  <div class="editing">
    <%= link_to "Create Chapter", new_chapter_path %>
  </div>
<% end %>

<% if current_user.can_invite? %>
  <div class="editing">
    <%= link_to "Invite a Trustee", new_invitation_path %>
  </div>
<% end %>

<div class="editing">
  <%= link_to "Trustees", chapter_users_path(@chapter) %>
</div>
