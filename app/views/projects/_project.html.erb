<article class="project <%= "shortlisted" if project.shortlisted_by?(current_user) %> <%= "winner" if project.winner? %>" data-id="<%= project.id %>">
      <header>
        <div class="title">
          <a class="title" href="#"><%= project.title %></a>
          <% if current_user.can_mark_winner?(project) %>
            <% if project.winner? %>
              <%= link_to "Winner", "#", :class => 'mark-as-winner' %>
            <% else %>
              <%= link_to "Winner", project_winners_url(project), :method => :post, :class => 'mark-as-winner' %>
            <% end %>
          <% end %>
          <% if project.shortlisted_by?(current_user) %>
            <%= link_to "Awesome", vote_path(Vote.by(current_user).for(project).first), :method => :delete, :class => "short-list" %>
          <% else %>
            <%= link_to "Awesome", project_votes_path(project), :method => :post, :class => "short-list" %>
          <% end %>
        </div>

        <section class="meta-data">
          <span>
            <%= project.name %>
          </span>
          <span>
            <%= project.chapter.name %>,
            <%= project.created_at %>
          </span>
        </section>
      </header>

      <section class="project-proposal-details">
        <div class="project-pitch">
          <p><%= project.use %></p>
        </div>
        <div="details-toggle">
        </div>
        <a class="see-more" href="#">
          <p>See the rest â†’</p>
        </a>
      </section>
    </article>

