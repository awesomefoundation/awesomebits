<% provide(:meta_viewport, 'width=device-width, initial-scale=1, maximum-scale=1') %>

<% content_for(:extra_body_classes, 'projects-index') %>

<section class="admin-panel">
  <%= render 'shared/sidebar', :chapter => @project.chapter %>
</section>

<section class="applications">
  <h1><%= t "projects.index.title", :name => @project.chapter.name %></h1>

  <p>
    <%= raw t ".back-to", :name => @project.chapter.name, :url => chapter_projects_path(@project.chapter) %>
  </p>

  <%= render @project %>

</section>

<% content_for :javascript do %>
  <% javascript_tag do %>
    $(window).load(function(){
      $('a.lightbox').colorbox();
    });
  <% end %>
<% end %>

